<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/cardView"
                                   app:cardElevation="6dp"
                                   app:cardCornerRadius="4dp"
                                    app:cardUseCompatPadding="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center">

    <RelativeLayout
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="match_parent">

        <TextView android:layout_width="match_parent"
                  android:text=""
                  android:fontFamily="@font/sf_pro_display_medium"


                  android:textColor="@color/black"
                  android:textSize="15.3sp"


                  android:layout_centerHorizontal="true"
                  android:textAlignment="center"
                  android:textStyle="bold"
                  android:layout_marginTop="6dp"
                  android:padding="6dp"
                  android:layout_alignParentTop="true"
                  android:id="@+id/title"
                  android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:padding="6dp"
                android:layout_marginEnd="6dp"
                android:layout_below="@+id/title"
                android:id="@+id/cat_info"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/fav1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/f0" />

                <ImageView
                        android:id="@+id/fav2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/f4"
                        android:visibility="gone" />
            </LinearLayout>
            <ImageView
                    android:visibility="gone"
                    android:id="@+id/info"
                    android:layout_alignParentEnd="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_info_outline_black_24dp" />


        </RelativeLayout>





        <ImageView
                android:layout_below="@+id/cat_info"
                android:id="@+id/image"
                android:layout_above="@+id/actions"
                android:src="@drawable/ic_sentiment_dissatisfied"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="-12dp" />

        <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"


                android:id="@+id/actions"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_like"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:padding="0dp"
                    android:paddingBottom="0dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"


                    android:drawableStart="@drawable/ic_thumb_up_black_24dp"
                    android:textColor="@color/white"
                    app:cornerRadius="5dp"
                    app:rippleColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
                    android:text="@string/love_it"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_dislike"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:padding="0dp"
                    android:paddingBottom="0dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"

                    android:textColor="@color/white"
                    app:backgroundTint="@android:color/holo_red_dark"
                    android:background="@android:color/holo_red_dark"

                    app:cornerRadius="5dp"
                    app:rippleColor="@color/colorPrimary"
                    android:textStyle="bold"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
                    android:text="@string/dislike"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>